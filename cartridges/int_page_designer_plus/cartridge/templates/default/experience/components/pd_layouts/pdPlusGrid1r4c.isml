<isscript>
    var assets = require('*/cartridge/scripts/assets.js');
    assets.addCss('/css/pagedesigner-bootstrap.min.css');
    assets.addCss('/css/experience/components/pd_layouts/pdPlusGridLayout.css');
</isscript>

<div class="pdplus-component pdplus-1r-4c ${pdict.bgImageParallax} ${pdict.customCss}" <isif condition="${pdict.BGImageProperties}"><isprint value="${pdict.BGImageProperties}" encoding="off" /></isif>>    
    <div class="bgcolor-overlay" style= "background-color:${pdict.bgOverlay}"></div>
    <div class="pdplus-grid-wrapper" <isif condition="${pdict.UILayout}"><isprint value="${pdict.UILayout}" encoding="off" /></isif>>
        <iscomment> If checkbox is clicked className Container will be added here else container-fluid className will be added </iscomment>
        <div class="${pdict.isContainer}" style="max-width: ${pdict.maxWidth};">
            <div class="row align-items-${pdict.verticalAlignment} justify-content-${pdict.horizontalAlginment}">
                <isif condition="${pdict.removeGutter === true}">
                    <isprint value="${pdict.regions.col1.setClassName(" region col-12 col-md-3 px-0").render()}" encoding="off" />
                    <isprint value="${pdict.regions.col2.setClassName(" region col-12 col-md-3 px-0").render()}" encoding="off" />
                    <isprint value="${pdict.regions.col3.setClassName(" region col-12 col-md-3 px-0").render()}" encoding="off" />
                    <isprint value="${pdict.regions.col4.setClassName(" region col-12 col-md-3 px-0").render()}" encoding="off" /> 
                <iselse/>
                    <isprint value="${pdict.regions.col1.setClassName(" region col-12 col-md-3").render()}" encoding="off" />
                    <isprint value="${pdict.regions.col2.setClassName(" region col-12 col-md-3").render()}" encoding="off" />
                    <isprint value="${pdict.regions.col3.setClassName(" region col-12 col-md-3").render()}" encoding="off" />
                    <isprint value="${pdict.regions.col4.setClassName(" region col-12 col-md-3").render()}" encoding="off" /> 
                </isif>
            </div>
        </div>
    </div>
</div>